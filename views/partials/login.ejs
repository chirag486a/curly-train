<section class="p-16 space-y-6 border-none shadow-sm rounded-xl w-fit bg-pink-400/80 shadow-pink-900/50">
    <h2 class="text-5xl text-center font-inter">Login</h2>
    <form id="loginForm" class="flex flex-col gap-8 h-fit rounded-xl w-96">
        <div id="errorMessage" class="text-red-700"></div>
        <div class="w-full">
            <input class="w-full p-3 bg-pink-100 border-none rounded-lg"
                type="email" placeholder="Email" name="email" id="email" />
        </div>
        <div class="w-full">
            <input class="w-full p-3 bg-pink-100 border-none rounded-lg"
                type="password" placeholder="Password" name="password"
                id="password" />
        </div>
        <div class="w-full space-y-3">
            <button type="submit"
                class="w-full p-3 text-white rounded-lg bg-pink-950">Login</button>
            <p class="text-center">
                <a href="/register" class="text-gray-700 underline">Don't have an
                    account?</a>
            </p>
            <p class="text-center">
                <a href="/forgetPassword" class="text-gray-700 underline">Forget
                    Password?</a>
            </p>
        </div>
    </form>
</section>
<script src="https://cdn.jsdelivr.net/npm/dompurify@3.0.1/dist/purify.min.js">
</script>